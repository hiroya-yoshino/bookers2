<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'leftpage', user: @user, book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100, 100) %></td>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><p><%= link_to 'Show', user_path(user.id) %></p></td>
        </tr>
      <% end %>
      </table>
      
    </div>
  </div>
</div>