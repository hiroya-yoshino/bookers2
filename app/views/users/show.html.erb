<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'leftpage', user: @user, book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %></td>
          <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><p><%= book.body %></p></td>
        
        <% if book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(book.id), class:"btn btn-success" %>
        </td>
      <% end %>
      
      <% if book.user == current_user %>
      <td>
          <%= link_to "Destroy", books_path, class:"btn btn-danger" %>
        </td>
      <% end %>
      </tr>
      <% end %>
      </table>
      
    </div>
  </div>
</div>