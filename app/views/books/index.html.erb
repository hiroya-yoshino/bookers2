<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'leftpage', user: @user, book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100, 100) %></td>
            <% end %>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><p><%= book.body %></p></td>
        </tr>
      <% end %>
      </table>

    </div>
  </div>
</div>