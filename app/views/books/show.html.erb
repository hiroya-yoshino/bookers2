<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'leftpage', user: @user, book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <td>
      <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100, 100) %></td>
            <% end %>
        <p><%= link_to @user.name, user_path(@user.id) %></p>
      </td>
      <td><%= link_to @book1.title, book_path(@book1.id) %></td>
      <td><p><%= @book1.body %></p></td>
      
      <% if @book1.user == current_user %>
      <td>
          <%= link_to "Edit", edit_book_path(@book1.id), class:"btn btn-success" %>
        </td>
      <% end %>
      
      <% if @book1.user == current_user %>
      <td>
          <%= link_to "Destroy", books_path, class:"btn btn-danger" %>
        </td>
      <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>